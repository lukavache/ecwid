{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "node_modules/@vue/runtime-core/dist/runtime-core.d.ts"
  ]
}
